    <!-- 支持返回json -->

    <!-- 启用shrio授权注解拦截方式 -->
    <aop:config proxy-target-class="true"/>

    <bean class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
        <property name="securityManager" ref="securityManager"/>
    </bean>

    <!-- 注入自定义swagger管理 -->
    <bean class="com.custom.web.swagger.SwaggerConfig"/>

    <!--静态资源交给默认servlet处理-->
    <mvc:default-servlet-handler/>

    <!--加载静态资源映射-->
    <mvc:resources mapping="/cc/api/doc/**" location="classpath:/swagger/dist/"/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/api/**"/>
            <mvc:exclude-mapping path="/api/user/login"/>

            <bean class="com.eliteams.quick4j.web.interceptors.TokenInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>
